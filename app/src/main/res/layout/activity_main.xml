<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="97dp"
            android:layout_height="92dp" app:srcCompat="@drawable/estrella"
            android:id="@+id/imageView5"
            tools:layout_editor_absoluteX="314dp"
            tools:layout_editor_absoluteY="138dp"/>
    //app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraitEnd_toEndOf="parent"/>
    <TextView
            android:text="Nombre"
            android:layout_width="113dp"
            android:layout_height="45dp"
            android:id="@+id/textView"
            android:textSize="30sp" tools:layout_editor_absoluteX="47dp"
            app:layout_constraintBottom_toBottomOf="@+id/editText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editNombre"
            app:layout_constraintTop_toBottomOf="@+id/nombrelabel"
            tools:layout_editor_absoluteX="182dp"
            android:id="@+id/editText"
            app:layout_constraintEnd_toStartOf="@+id/estrella" android:text="Ingrese su nombre"
            tools:layout_editor_absoluteY="315dp"/>
    <Button
            android:text="Antigua \n\Guatemala"
            android:layout_width="wrap_content"
            android:layout_height="74dp" tools:layout_editor_absoluteY="600dp"
            tools:layout_editor_absoluteX="37dp" android:id="@+id/AntiguaButton" tools:textFontWeight="Roboto"/>
    <Button
            android:text="Semuc \n\Champey"
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            app:layout_constraintTop_toBottomOf="@+id/nomVis" app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="160dp" android:id="@+id/SemucButton"
            app:layout_constraintTop_toTopOf="@+id/AntiguaButton"/>
    <Button
            android:text="Esquipulas"
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            app:layout_constraintTop_toBottomOf="@+id/nomVis"
            tools:layout_editor_absoluteX="262dp" android:id="@+id/EsquipulasButton"
            app:layout_constraintTop_toTopOf="@+id/SemucButton"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="176dp"
            app:layout_constraintTop_toBottomOf="@+id/nomVis"
            app:srcCompat="@drawable/guate"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView6" android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>

</android.support.constraint.ConstraintLayout>